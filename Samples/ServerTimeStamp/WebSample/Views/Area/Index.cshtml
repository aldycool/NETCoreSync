@using WebSample.Models
@model List<SyncArea>

@{
    ViewData["Title"] = "View Areas";
}

<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>City</th>
                <th>District</th>
                <th>SyncID</th>
                <th>KnowledgeID</th>
                <th>TimeStamp</th>
                <th>Deleted</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                var data = Model[i];
                <tr>
                    <td>@data.ID</td>
                    <td>@data.City</td>
                    <td>@data.District</td>
                    <td>@data.SyncID</td>
                    <td>@data.KnowledgeID</td>
                    <td>@data.TimeStamp</td>
                    <td>@data.Deleted</td>
                </tr>
            }
        </tbody>
    </table>
</div>
